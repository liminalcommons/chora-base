# Show project status summary
status:
    @echo "üéØ {{ project_name }} - Project Status"
    @echo "======================================"
    {% if use_git %}@echo "Git branch: $(git branch --show-current)"
    @echo "Git status: $(git status --short | wc -l) changed files"
    {% endif %}{% if (sap_selection_mode != 'custom' or (include_sap_001 | default(false))) %}@just inbox-status
    {% endif %}{% if (sap_selection_mode != 'custom' or (include_sap_015 | default(false))) %}@echo ""
    @echo "üìã Beads Tasks:"
    @bd list --status open | wc -l | xargs -I {} echo "  Open: {} tasks"
    @bd list --status in_progress | wc -l | xargs -I {} echo "  In Progress: {} tasks"
    {% endif %}

# Run all validation checks
validate:
    @echo "üîç Running all validation checks..."
    {% if ((sap_selection_mode in ['standard', 'comprehensive']) or (sap_selection_mode == 'custom' and (include_sap_053 | default(false)))) %}@just conflict-check
    {% endif %}{% if ((sap_selection_mode in ['standard', 'comprehensive']) or (sap_selection_mode == 'custom' and (include_sap_010 | default(false)))) %}@just memory-validate
    {% endif %}{% if ((sap_selection_mode == 'comprehensive') or (sap_selection_mode == 'custom' and (include_sap_052 | default(false)))) %}@just ownership-validate
    {% endif %}{% if ((sap_selection_mode == 'comprehensive') or (sap_selection_mode == 'custom' and (include_sap_056 | default(false)))) %}@just feature-manifest-validate
    {% endif %}@echo "‚úÖ All validations complete"

# Clean temporary files and caches
clean:
    @echo "üßπ Cleaning temporary files..."
    @find . -type f -name "*.pyc" -delete
    @find . -type d -name "__pycache__" -delete
    @find . -type f -name ".DS_Store" -delete
    @find . -type f -name "*.tmp" -delete
    @echo "‚úÖ Cleanup complete"

